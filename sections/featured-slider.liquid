{%- liquid
  assign products_to_display = section.settings.collection.all_products_count

  if section.settings.collection.all_products_count > section.settings.products_to_show
    assign products_to_display = section.settings.products_to_show
    assign more_in_collection = true
  endif
-%}

  
  
  <!-- Slider main container -->
  <div class="swiper">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
      <!-- Slides -->
      {%- for product in section.settings.collection.products -%}
      	<div class="swiper-slide">
          <div class="card-wrapper">
            <div class="product-card__image">
              <img
                  src="{{ product.featured_image | img_url: '600x600' }}"
                  alt="{{ product.featured_media.alt | escape }}"
                  loading="lazy"
                  class="motion-reduce"
                  width="{{ product.featured_media.width }}"
                  height="{{ product.featured_media.height }}"
                />
              </div>
              <p>{{ product.title }}</p>
              <div>{{ product.description }}</div>
              <p>{{ product.price | money }} GBP</p>
          </div>
        </div>
      {% endfor %}
    
    </div>
    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev">prev</div>
    <div class="swiper-button-next">next</div>
  </div>
 


{% schema %}
{
  "name": "Featured Slider",
  "tag": "section",
  "class": "spaced-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Featured collection",
      "label": "Featured collection"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 2,
      "max": 12,
      "step": 2,
      "default": 4,
      "label": "Products to show"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "t:sections.featured-slider.settings.show_view_all.label"
    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": false,
      "label": "t:sections.featured-slider.settings.swipe_on_mobile.label"
    },
    {
      "type": "header",
      "content": "t:sections.featured-slider.settings.header.content"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.featured-slider.settings.image_ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.featured-slider.settings.image_ratio.options__2.label"
        },
        {
          "value": "square",
          "label": "t:sections.featured-slider.settings.image_ratio.options__3.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.featured-slider.settings.image_ratio.label"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": false,
      "label": "t:sections.featured-slider.settings.show_secondary_image.label"
    },
    {
      "type": "checkbox",
      "id": "add_image_padding",
      "default": false,
      "label": "t:sections.featured-slider.settings.add_image_padding.label"
    },
    {
      "type": "checkbox",
      "id": "show_image_outline",
      "default": true,
      "label": "t:sections.featured-slider.settings.show_image_outline.label"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "t:sections.featured-slider.settings.show_vendor.label"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "en:sections.featured-slider.settings.show_rating.label",
      "info": "en:sections.featured-slider.settings.show_rating.info"
    }
  ],
  "presets": [
    {
      "name": "Featured Slider"
    }
  ]
}
{% endschema %}

{% javascript %}
  const swiper = new Swiper(".swiper", {
    loop: true,
    loopFillGroupWithBlank: true,
    freeMode: true,

    breakpoints: {
      320: {
        slidesPerView: 2,
        spaceBetween: 20
      },
      544: {
        slidesPerView: 3,
        spaceBetween: 30
      },
      991: {
        slidesPerView: 4,
        spaceBetween: 15
      }
    },
        
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });
{% endjavascript %}
