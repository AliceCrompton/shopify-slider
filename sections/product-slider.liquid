
<!-- Slider main container -->
<div class="swiper">
  <!-- Additional required wrapper -->
  <div class="swiper-wrapper">
    <!-- Slides -->
    <div class="swiper-slide">{{ section.settings.text-box | truncate: 1 }}</div>
    <div class="swiper-slide">{{ section.settings.text-box }}</div>
    <div class="swiper-slide">{{ section.settings.text-box }}</div>
    <div class="swiper-slide">{{ section.settings.text-box }}</div>
    <div class="swiper-slide">{{ section.settings.text-box }}</div>
    <div class="swiper-slide">{{ section.settings.text-box }}</div>
    <div class="swiper-slide">{{ section.settings.text-box }}</div>
  </div>
  <!-- If we need navigation buttons -->
  <div class="swiper-button-prev">prev</div>
  <div class="swiper-button-next">next</div>
</div>

{% schema %}
{
  "name": "Product Slider",
  "settings": [
    {
      "id": "text-box",
      "type": "text",
      "label": "Heading",
      "default": "Title"
    },
    {
      "id": "link",
      "type": "url",
      "label": "Link URL"
    },
    {
      "id": "linktext",
      "type": "text",
      "label": "Link text",
      "default": "Click here"
    }
  ]
  ,
  "presets": [
    {
      "name": "Product Slider",
      "category": "Promotional"
    }
  ]
}
{% endschema %}

{% javascript %}
  const swiper = new Swiper(".swiper", {
    loop: true,
    loopFillGroupWithBlank: true,
    freeMode: true,

    breakpoints: {
      320: {
        slidesPerView: 2,
        spaceBetween: 20
      },
      544: {
        slidesPerView: 3,
        spaceBetween: 30
      },
      991: {
        slidesPerView: 4,
        spaceBetween: 15
      }
    },
        
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
  });
{% endjavascript %}